{
  "name": "redpanda-docs-site",
  "description": "The Antora playbook project for Redpanda documentation.",
  "license": "ISC",
  "scripts": {
    "build": "if [ \"$PREVIEW\" = \"true\" ]; then antora --to-dir docs --fetch preview-antora-playbook.yml; else antora --to-dir docs --fetch antora-playbook.yml; fi",
    "build-local": "antora --to-dir docs --fetch local-antora-playbook.yml",
    "start": "cross-env-shell LIVERELOAD=true npx gulp",
    "serve": "wds --node-resolve --open / --watch --root-dir docs"
  },
  "dependencies": {
    "@antora/cli": "3.1.2",
    "@antora/site-generator": "3.1.2",
    "@asciidoctor/tabs": "^1.0.0-beta.5",
    "@redpanda-data/docs-extensions-and-macros": "latest"
  },
  "devDependencies": {
    "@web/dev-server": "^0.2.1",
    "cross-env": "^7.0.3",
    "gulp": "^4.0.2",
    "gulp-connect": "^5.7.0",
    "open": "^9.1.0"
  }
}
